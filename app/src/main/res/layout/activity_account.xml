<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_dark"
                android:padding="24dp"
                android:gravity="center_horizontal"
                android:elevation="4dp">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="16dp">
                    
                    <TextView
                        android:id="@+id/text_initial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="J"
                        android:textColor="@color/cyan_accent"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_profile_circle" />
                </FrameLayout>

                <TextView
                    android:id="@+id/text_username_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/text_member_since"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member since Jan 2023"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium Member"
                    android:textColor="@color/cyan_accent"
                    android:background="@drawable/bg_badge_premium"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="24dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_gradient_cyan"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- Stats Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="16dp"
                android:useDefaultMargins="false"
                android:alignmentMode="alignMargins">

                <!-- Borrowed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_stat_card"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_books"
                        app:tint="@color/cyan_accent"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/stat_borrowed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Books Borrowed"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <!-- Currently Reading -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_stat_card"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_books"
                        app:tint="@color/purple_accent"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/stat_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Currently Reading"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <!-- Completed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_stat_card"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_nav_borrow"
                        app:tint="#00E676"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/stat_completed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>

                <!-- Reservations/Fines -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_stat_card"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fines"
                        app:tint="#FF4081"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/stat_reservations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reservations"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </GridLayout>

            <!-- Hidden Fields required for logic but not shown in new UI -->
             <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/text_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>


            <!-- Reading Activity Chart (Visual Only) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading Activity"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_dark"
                android:padding="16dp"
                android:orientation="vertical">

                <!-- Simple Rows for Days -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <TextView android:text="Mon" android:textColor="@color/text_secondary" android:layout_width="40dp" android:layout_height="wrap_content"/>
                    <View android:layout_width="0dp" android:layout_weight="0.8" android:layout_height="12dp" android:background="@drawable/bg_gradient_cyan" android:layout_marginEnd="8dp"/>
                    <TextView android:text="79m" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
                
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <TextView android:text="Tue" android:textColor="@color/text_secondary" android:layout_width="40dp" android:layout_height="wrap_content"/>
                    <View android:layout_width="0dp" android:layout_weight="0.6" android:layout_height="12dp" android:background="@drawable/bg_gradient_cyan" android:layout_marginEnd="8dp"/>
                    <TextView android:text="66m" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView android:text="Wed" android:textColor="@color/text_secondary" android:layout_width="40dp" android:layout_height="wrap_content"/>
                    <View android:layout_width="0dp" android:layout_weight="0.4" android:layout_height="12dp" android:background="@drawable/bg_gradient_cyan" android:layout_marginEnd="8dp"/>
                    <TextView android:text="33m" android:textColor="@color/text_secondary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Achievements -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievements"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Achievement 1 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_dark"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">
                        
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_nav_borrow"
                            app:tint="@color/cyan_accent"
                            android:layout_marginBottom="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bookworm"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read 100+ books"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Achievement 2 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_dark"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="12dp">
                        
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_books"
                            app:tint="@color/cyan_accent"
                            android:layout_marginBottom="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Early Bird"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Always return on time"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                     <!-- Achievement 3 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_dark"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center">
                        
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_view_grid"
                            app:tint="@color/cyan_accent"
                            android:layout_marginBottom="8dp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Explorer"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read 10+ categories"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginTop="32dp"
                android:backgroundTint="#FF3D00"
                android:padding="12dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color"
        app:itemIconSize="24dp"
        app:itemPaddingTop="8dp"
        app:itemPaddingBottom="8dp"
        android:background="@color/bg_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>