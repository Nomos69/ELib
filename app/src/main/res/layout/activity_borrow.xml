<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Toggle Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_search_input"
            android:padding="4dp">

            <TextView
                android:id="@+id/tab_issue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Issue Book"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/bg_button_gradient"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/tab_return"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Return Book"
                android:textColor="@color/text_hint"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp">

            <!-- Issue View -->
            <ScrollView
                android:id="@+id/view_issue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Issue Details"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Book"
                        android:textColor="@color/text_hint"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_issue_book"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_search_input"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select User"
                        android:textColor="@color/text_hint"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinner_issue_user"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_search_input"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Due Date"
                        android:textColor="@color/text_hint"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/input_issue_date"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_search_input"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:text="mm/dd/yyyy"
                        android:textColor="@color/text_hint"
                        android:clickable="true"
                        android:focusable="true"
                        android:drawableEnd="@drawable/ic_view_list"
                        android:drawableTint="@color/text_hint"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_confirm_issue"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/bg_button_gradient"
                        android:text="Issue Book"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_books"
                        android:drawableTint="@android:color/white"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>

                </LinearLayout>
            </ScrollView>

            <!-- Return View -->
            <LinearLayout
                android:id="@+id/view_return"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currently Borrowed Books"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_borrowed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/selector_nav_item_color"
        app:itemTextColor="@color/selector_nav_item_color"
        app:itemIconSize="24dp"
        app:itemPaddingTop="8dp"
        app:itemPaddingBottom="8dp"
        android:background="@color/bg_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>